@model UserModel
@{
    ViewData["Title"] = "Панель админа";
}

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="GetProducts" class="list-group-item list-group-item-action">Товары</a>
            <a asp-action="GetUsers" class="list-group-item list-group-item-action">Пользователи</a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Редактирование данных пользователя @Model.Login</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model.Id" method="post">
                            <div class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Имя</label>
                                <div class="col-8">
                                    <input placeholder="Имя" name="Name" class="form-control here" type="text" value="@Model.Name" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Email (логин)</label>
                                <div class="col-8">
                                    <input placeholder="Email" name="Login" class="form-control here" type="email" value="@Model.Login" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Пароль</label>
                                <div class="col-8">
                                    <input name="Password" placeholder="Password" value="@Model.Password" required="" class="form-control here">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Админ</label>
                                <div class="col-8">
                                     @if (Model.Admin==true){
                                        <input name="Admin" type="radio" id="true" value="true" checked />
                                        <label for="true">Да</label>
                                        <input name="Admin" type="radio" id="false" value="false" />
                                        <label for="false">Нет</label>
                                     }
                                    else
                                    {
                                        <input name="Admin" type="radio" id="true" value="true" />
                                        <label for="true">Да</label>
                                        <input name="Admin" type="radio" id="false" value="false" checked />
                                        <label for="false">Нет</label>
                                    }
                                    @* <input name="Admin" placeholder="Админ" value="@Model.Admin" class="form-control here"> *@
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8 text-right">
                                    <button class="btn btn-info">Сохранить</button>
                                </div>
                            </div>
                        </form>
                        <a class="text-info" asp-action="GetUsers"><i class="bi bi-arrow-left mr-2 text-info"></i>Назад</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>